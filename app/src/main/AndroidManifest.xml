<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.imuaythai.mtjudges">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:name=".application.MTJudgesApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity android:name=".splash.SplashActivity" android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".login.LoginActivity"
                  android:windowSoftInputMode="adjustResize"
                  android:theme="@style/AppTheme"/>

        <activity android:name=".main.MainActivity"
                  android:windowSoftInputMode="adjustResize"
                  android:theme="@style/AppTheme"/>

        <activity android:name=".settings.SettingsActivity"
                  android:theme="@style/AppTheme"/>

        <activity android:name=".change.settings.ChangeSettingsActivity"
                  android:windowSoftInputMode="adjustResize"
                  android:theme="@style/AppTheme"/>

        <activity android:name=".test.TestActivity"
                  android:theme="@style/AppTheme"/>

        <activity android:name=".time.judge.TimeJudgeActivity"
                  android:screenOrientation="landscape"
                  android:windowSoftInputMode="adjustResize"
                  android:theme="@style/AppTheme"/>

        <activity android:name=".point.judge.PointJudgeActivity"
                  android:screenOrientation="landscape"
                  android:windowSoftInputMode="adjustResize"
                  android:theme="@style/AppTheme"/>

        <activity android:name=".jury.judge.JuryJudgeActivity"
                  android:screenOrientation="landscape"
                  android:windowSoftInputMode="adjustResize"
                  android:theme="@style/AppTheme"/>

    </application>

</manifest>