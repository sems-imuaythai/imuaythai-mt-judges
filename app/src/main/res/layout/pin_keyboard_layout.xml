<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/code_input_form" android:layout_centerHorizontal="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical" >

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/keyboard_view"
                    android:layout_centerHorizontal="true"
                    android:visibility="visible"
                    android:layout_below="@+id/code_input_layout">

                <Button android:text="1"
                        android:tag="1"
                        android:id="@+id/button_1"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        style="@style/login_keyboard_button"/>

                <Button android:text="2"
                        android:tag="2"
                        android:id="@+id/button_2"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/button_1"
                        android:layout_toEndOf="@+id/button_1"
                        style="@style/login_keyboard_button"/>

                <Button android:text="3"
                        android:tag="3"
                        android:id="@+id/button_3"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/button_2"
                        android:layout_toEndOf="@+id/button_2"
                        style="@style/login_keyboard_button"/>

                <Button android:text="4"
                        android:tag="4"
                        android:id="@+id/button_4"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        style="@style/login_keyboard_button"
                        android:layout_below="@+id/button_1" />

                <Button android:text="5"
                        android:tag="5"
                        android:id="@+id/button_5"
                        android:layout_toRightOf="@+id/button_1"
                        android:layout_toEndOf="@+id/button_1"
                        style="@style/login_keyboard_button"
                        android:layout_below="@+id/button_2" />

                <Button android:text="6"
                        android:tag="6"
                        android:id="@+id/button_6"
                        android:layout_toRightOf="@+id/button_2"
                        android:layout_toEndOf="@+id/button_2"
                        style="@style/login_keyboard_button"
                        android:layout_below="@+id/button_3" />

                <Button android:text="7"
                        android:tag="7"
                        android:id="@+id/button_7"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        style="@style/login_keyboard_button"
                        android:layout_below="@+id/button_4" />

                <Button android:text="8"
                        android:tag="8"
                        android:id="@+id/button_8"
                        android:layout_toRightOf="@+id/button_7"
                        android:layout_toEndOf="@+id/button_7"
                        style="@style/login_keyboard_button"
                        android:layout_below="@+id/button_5" />

                <Button android:text="9"
                        android:tag="9"
                        android:id="@+id/button_9"
                        android:layout_toRightOf="@+id/button_8"
                        android:layout_toEndOf="@+id/button_8"
                        style="@style/login_keyboard_button"
                        android:layout_below="@+id/button_6" />

                <Button android:text="0"
                        android:tag="0"
                        android:id="@+id/button_0"
                        android:layout_toRightOf="@+id/button_7"
                        android:layout_toEndOf="@+id/button_7"
                        style="@style/login_keyboard_button"
                        android:layout_below="@+id/button_8" />

                <Button android:text="c"
                        android:tag="c"
                        android:id="@+id/button_c"
                        android:layout_toRightOf="@+id/button_8"
                        android:layout_toEndOf="@+id/button_8"
                        style="@style/login_keyboard_button"
                        android:layout_below="@+id/button_9" />

            </RelativeLayout>

            <LinearLayout
                        android:id="@+id/code_input_layout"
                        style="@style/code_input"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_alignParentTop="true"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_alignLeft="@+id/keyboard_view"
                        android:layout_alignStart="@+id/keyboard_view"
                        android:layout_alignRight="@+id/keyboard_view"
                        android:layout_alignEnd="@+id/keyboard_view">

                <ImageView
                        android:id="@+id/char_input_1"
                        android:padding="6dp"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_black_circle"/>

                <ImageView
                        android:id="@+id/char_input_2"
                        android:padding="6dp"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_black_circle"/>

                <ImageView
                        android:id="@+id/char_input_3"
                        android:padding="6dp"
                        android:layout_width="28dp"
                        android:layout_height="6dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_black_circle"/>

                <View android:layout_width="8dp" android:layout_height="0dp" />

                <ImageView
                        android:id="@+id/char_input_4"
                        android:padding="6dp"
                        android:layout_width="28dp"
                        android:layout_height="6dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_black_circle"/>

                <ImageView
                        android:id="@+id/char_input_5"
                        android:padding="6dp"
                        android:layout_width="28dp"
                        android:layout_height="6dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_black_circle"/>

                <ImageView
                        android:id="@+id/char_input_6"
                        android:padding="6dp"
                        android:layout_width="28dp"
                        android:layout_height="6dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_black_circle"/>

            </LinearLayout>

</RelativeLayout>