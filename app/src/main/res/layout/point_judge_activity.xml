<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="viewModel"
                type="com.imuaythai.mtjudges.point.judge.PointJudgeViewModel"/>
    </data>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">

            <fragment android:name="com.imuaythai.mtjudges.fight.header.FightHeaderFragment"
                    android:id="@+id/header_fragment"
                    tools:layout="@layout/header_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />

            <fragment android:name="com.imuaythai.mtjudges.score.card.ScoreCardFragment"
                      android:id="@+id/score_card_fragment"
                      tools:layout="@layout/score_card_fragment"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent" />

        </LinearLayout>


        <LinearLayout
                android:id="@+id/progress_view"
                android:orientation="vertical"

                android:background="#2F030000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

            <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_centerInParent="true" />

        </LinearLayout>

    </RelativeLayout>

</layout>
