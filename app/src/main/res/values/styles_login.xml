<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="login_keyboard_button">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/button_oval_stroke</item>
        <item name="android:textColor">@color/font_dark</item>
        <item name="android:textSize">30sp</item>
    </style>


    <style name="code_input">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">#565656</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/input_user_code</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>


</resources>